    <style name="PrimaryBackgroundTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayout">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChipTextMediumStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ChipTextSmallStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EntryChipMaterialStyle" parent="Widget.MaterialComponents.Chip.Entry" />
